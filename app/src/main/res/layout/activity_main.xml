<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="#E7E7E7">
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Reset Game"
			android:layout_marginBottom="10dp"
			android:id="@+id/reset"
			android:background="@color/colorAccent"
			android:textColor="#fff"
			android:onClick="restGame"
	/>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dp">
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn1"
				android:background="#FFFFFF"
				android:onClick="BtnClick"
				android:layout_height="40pt"
				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn2"
				android:onClick="BtnClick" android:background="#FFFFFF"

				android:layout_height="40pt"
				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:onClick="BtnClick" android:background="#FFFFFF"

				android:id="@+id/btn3"
				android:layout_height="40pt"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dp">
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn4"
				android:onClick="BtnClick"
				android:layout_height="40pt" android:background="#FFFFFF"

				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:onClick="BtnClick"
				android:id="@+id/btn5" android:background="#FFFFFF"

				android:layout_height="40pt"
				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:onClick="BtnClick" android:background="#FFFFFF"

				android:id="@+id/btn6"
				android:layout_height="40pt"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dp">
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn7"
				android:onClick="BtnClick" android:background="#FFFFFF"

				android:layout_height="40pt"
				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn8"
				android:onClick="BtnClick"
				android:layout_height="40pt" android:background="#FFFFFF"

				android:layout_marginRight="8dp"/>
		<Button
				android:layout_width="40pt"
				android:text=""
				android:id="@+id/btn9" android:background="#FFFFFF"

				android:onClick="BtnClick"
				android:layout_height="40pt"/>
	</TableRow>
</TableLayout>