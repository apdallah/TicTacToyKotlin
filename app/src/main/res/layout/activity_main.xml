<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="#fff">

	<Button
			android:text="Tic Tac Toy"
			android:layout_width="313dp"
			android:layout_height="wrap_content"
			android:id="@+id/tictac" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="232dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<Button
			android:text="Calculator"
			android:layout_width="314dp"
			android:layout_height="wrap_content"
			android:id="@+id/calc" android:layout_marginTop="28dp"
			app:layout_constraintTop_toBottomOf="@+id/tictac" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>
	<Button
			android:text="Button"
			android:layout_width="314dp"
			android:layout_height="wrap_content"
			android:id="@+id/button4" android:layout_marginTop="24dp"
			app:layout_constraintTop_toBottomOf="@+id/calc" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.506"/>
</android.support.constraint.ConstraintLayout>