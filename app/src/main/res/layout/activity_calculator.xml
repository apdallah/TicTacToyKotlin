<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="1"
		tools:context=".CalculatorActivity">

	<EditText
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:inputType="number"
			android:ems="10"
			android:hint="0"
			android:textSize="60sp"
			android:padding="10dp"
			android:gravity="center|end"
 			android:textColor="#fff"
			android:background="#8B8989"
			android:layout_weight="0.4"
			android:id="@+id/showNumbers"/>
	<TableLayout
			android:gravity="center|bottom"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.6"
			android:background="#D3D2D2"
	>

		<TableRow android:weightSum="1" android:gravity="center" android:layout_width="match_parent"
		          android:layout_height="0dp"
		          android:padding="2dp"
		android:layout_weight=".12">
			<Button
					android:text="AC"
					android:layout_width="0dp"
					android:layout_weight="0.25"
					android:textSize="20sp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:onClick="cleanCalc"
					android:layout_height="40pt" android:id="@+id/clean"/>
			<Button
					android:text="+/-"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_weight="0.25" android:layout_height="40pt"
					android:onClick="numberBtnClick"
					android:id="@+id/btnPlusSub"/>
			<Button
					android:text="%"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:layout_weight="0.25"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_height="40pt" android:id="@+id/button2"/>
			<Button
					android:text="/"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:textColor="#fff"
					android:background="#FF9800"
					android:layout_margin="2dp"
					android:onClick="opClick"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btnDiv"/>
		</TableRow>
		<TableRow android:weightSum="1" android:gravity="center" android:layout_width="match_parent"
		          android:layout_height="0dp"
		          android:layout_weight=".12"
		          android:padding="2dp">
			<Button
					android:text="7"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:onClick="numberBtnClick"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn7"/>
			<Button
					android:text="8"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:onClick="numberBtnClick"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn8"/>
			<Button
					android:text="9"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:onClick="numberBtnClick"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn9"/>
			<Button
					android:text="x"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:textColor="#fff"
					android:background="#FF9800"
					android:layout_margin="2dp" android:onClick="opClick"

					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btnMulti"/>
		</TableRow>
		<TableRow android:gravity="center" android:weightSum="1" android:layout_width="match_parent"
		          android:layout_height="0dp"
		          android:layout_weight=".12"
		          android:padding="2dp">
			<Button
					android:text="4"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn4"/>
			<Button
					android:text="5"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:onClick="numberBtnClick"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn5"/>
			<Button
					android:text="6"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:onClick="numberBtnClick"

					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn6"/>
			<Button
					android:text="-"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:onClick="opClick"

					android:layout_margin="2dp"
					android:textColor="#fff"
					android:background="#FF9800"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btnSub"/>
		</TableRow>
		<TableRow android:weightSum="1" android:gravity="center" android:layout_width="match_parent"
		          android:layout_height="0dp"
		          android:layout_weight=".12"
		          android:padding="2dp">
			<Button
					android:text="1"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn1"/>
			<Button
					android:text="2"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:background="#F3F3F3"
					android:onClick="numberBtnClick"

					android:layout_margin="2dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn2"/>
			<Button
					android:text="3"
					android:textSize="20sp"
					android:background="#F3F3F3"
					android:layout_margin="2dp"
					android:layout_width="0dp"					android:onClick="numberBtnClick"

					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btn3"/>
			<Button
					android:text="+"
					android:textSize="20sp"
					android:layout_width="0dp"
					android:textColor="#fff"
					android:background="#FF9800"
					android:layout_margin="2dp"
					android:onClick="opClick"

					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btnPlus"/>
		</TableRow>
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight=".12"	
				android:padding="2dp" android:weightSum="1"
				android:gravity="center">
			<Button
					android:text="0"

					android:background="#F3F3F3"
					android:onClick="numberBtnClick"

					android:layout_marginRight="2dp"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="2dp" android:textSize="20sp"
					android:layout_width="0dp"
					android:layout_weight="0.50" android:layout_height="40pt" android:id="@+id/btn0"/>
			<Button
					android:text="."
					android:textSize="20sp"
					android:background="#F3F3F3"
					android:onClick="numberBtnClick"

					android:layout_marginRight="2dp"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="2dp" android:layout_width="0dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/btnDot"/>
			<Button
					android:text="="
					android:textSize="20sp"
					android:layout_width="0dp"
					android:textColor="#fff"
					android:background="#FF9800"
					android:layout_marginRight="2dp"
					android:layout_marginLeft="2dp"
					android:onClick="equalBtnClick"
					android:layout_marginTop="2dp"
					android:layout_weight="0.25" android:layout_height="40pt" android:id="@+id/equal"/>
		</TableRow>
	</TableLayout>
</LinearLayout>